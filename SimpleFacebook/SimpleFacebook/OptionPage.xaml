<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleFacebook.OptionPage"
             Title="OptionPage">
  <ScrollView>
    <StackLayout>
            <StackLayout.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <OnPlatform.iOS>
                        0, 20, 0, 0
                    </OnPlatform.iOS>
                </OnPlatform>
            </StackLayout.Padding>
            <Button Text="Profile" Clicked="ProfileButton_Clicked"/>
            <Button Text="Friends" Clicked="FriendsButton_Clicked"/>
    </StackLayout>
  </ScrollView>
</ContentPage>